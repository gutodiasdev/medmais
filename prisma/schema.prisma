// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role Role @default(COLABORATOR)
}

enum Role {
  ADMIN
  MANAGER
  DOCTOR
  COLABORATOR
}

model Patient {
  id String @id @default(uuid())
  name String
  rg String @unique
  age String
  weight String
}